<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onebumps.mapper.DoctorMapper">

    <resultMap id="doctorMap" type="com.onebumps.pojo.entity.Doctor">
        <id property="id" column="id"/>
        <result property="doctorNumber" column="doctor_number"/>
        <result property="name" column="name"/>
        <result property="gender" column="gender"/>
        <result property="age" column="age"/>
        <result property="phone" column="phone"/>
        <result property="position" column="position"/>
        <result property="employmentDate" column="employment_date"/>
        <result property="salary" column="salary"/>
        <result property="notes" column="notes"/>
    </resultMap>

    <sql id="allColumn">
        id,doctor_number,name,
        gender,age,phone,
        position,employment_date,salary,
        notes
    </sql>

    <select id="selectById" parameterType="long" resultMap="doctorMap">
        SELECT
        <include refid="allColumn"/>
        FROM doctor
        WHERE id = #{id}
    </select>
    <select id="selectAll" resultMap="doctorMap">
        SELECT
        <include refid="allColumn"/>
        FROM doctor
    </select>

    <delete id="deleteById" parameterType="long">
        DELETE
        FROM doctor
        WHERE id = #{id}
    </delete>
    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.onebumps.pojo.entity.Doctor"
            useGeneratedKeys="true">
        INSERT INTO doctor
        ( doctor_number, name
        , gender, age, phone
        , position, employment_date, salary
        , notes)
        VALUES (#{doctorNumber}, #{name}, #{gender}, #{age}, #{phone}, #{position}, #{employmentDate}, #{salary},
                #{notes})
    </insert>

    <update id="updateById" parameterType="com.onebumps.pojo.entity.Doctor">
        UPDATE doctor
        SET doctor_number   = #{doctorNumber},
            name            = #{name},
            gender          = #{gender},
            age             = #{age},
            phone           = #{phone},
            position        = #{position},
            employment_date = #{employmentDate},
            salary          = #{salary},
            notes           = #{notes}
        WHERE id = #{id}
    </update>
</mapper>